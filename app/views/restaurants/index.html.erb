<h1>Restaurants</h1>

<%= link_to 'Add a restaurant' ,new_restaurant_path %>
<hr>

<% @restaurants.each do |restaurant| %>
  <%= link_to restaurant_path(restaurant) do %>
    <p>
      <%= "#{restaurant.name} | #{restaurant.address} | #{restaurant.phone_number} |
         #{restaurant.category.capitalize}" %>
    </p>
  <% end %>
<% end %>
